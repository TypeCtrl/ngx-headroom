    "semantic-release": "cd dist && semantic-release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.1.6",
    "@angular/common": "6.1.6",
    "@angular/compiler": "6.1.6",
    "@angular/core": "6.1.6",
    "@angular/platform-browser": "6.1.6",
    "@angular/platform-browser-dynamic": "6.1.6",
    "@ctrl/ngx-github-buttons": "2.0.4",
    "bootstrap": "4.1.3",
    "core-js": "2.5.7",
    "rxjs": "6.2.2",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.7.4",
    "@angular/cli": "6.1.4",
    "@angular/compiler-cli": "6.1.6",
    "@angular/language-service": "6.1.6",
    "@types/jasmine": "2.8.8",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "10.7.1",
    "codelyzer": "4.4.4",
    "jasmine-core": "3.2.1",
    "karma": "3.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "2.0.1",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.3.1",
    "ng-packagr": "4.1.0",
    "rimraf": "2.6.2",
    "semantic-release": "15.9.9",
    "travis-deploy-once": "5.0.2",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "typescript": "2.9.2"
  },
  "engines": {
    "npm": ">= 6",
    "node": ">= 8"
  },
  "release": {
    "branch": "master"
  },
  "bundlesize": [
    {
      "path": "./dist/bundles/ctrl-ngx-headroom.umd.min.js",
      "maxSize": "2 kB"
    },
    {
      "path": "./dist/esm5/ctrl-ngx-headroom.js",
      "maxSize": "3 kB"
    },
    {
      "path": "./dist/esm2015/ctrl-ngx-headroom.js",
      "maxSize": "3 kB"
    }
  ]
}
